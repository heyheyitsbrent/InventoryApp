@inherits LayoutComponentBase

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton Icon="menu" @onclick="@SideBarToggle"></MatIconButton>
                <MatAppBarTitle>Inventory</MatAppBarTitle>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
    <MatAppBarContent>
        <MatDrawerContainer>
            <MatDrawer @bind-Opened="@_menuOpen" Mode="@MatDrawerMode.Modal">
                <NavMenu />
            </MatDrawer>
            <MatDrawerContent>
                @Body
            </MatDrawerContent>
        </MatDrawerContainer>
    </MatAppBarContent>
</MatAppBarContainer>
                
@code{
    private bool _menuOpen;
    private void SideBarToggle(){
        _menuOpen = !_menuOpen;
    }
}